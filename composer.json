{
    "license": "BSD-3-Clause",
    "require": {
        "php": "^7.4 || ~8.0.0 || 8.1.0",
        "ext-curl": "*",
        "ext-bcmath": "*",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "ext-memcache": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-zlib": "*",

        "gumlet/php-image-resize": "^2.0",
        "phpmailer/phpmailer": "^6.5",
        "razielanarki/hyperlight": ">=0.1"
    },
    "require-dev": {
        "overtrue/phplint": "^3.0.6 || ^4.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "slevomat/coding-standard": "^7.0.17",
        "squizlabs/php_codesniffer": "^3.6.1"
    },
    "provide": {
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php73": "*"
    },
    "autoload": {
        "psr-4": {
            "MyLittleWallpaper\\classes\\": "classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MyLittleWallpaperTests\\": "tests"
        }
    }
}
